extends layout
block content
    h1= specificCollection.name
    p= specificCollection.User.username
    table
        thead
            tr
                td Name
                td Description
                td Platform
                td Publisher
                td More Info
        tbody
            each game in specificCollection.Games
                tr
                    td= game.name
                    td= game.description
                    td= game.platform
                    td= game.publisher
                    td: a(href=`/games/${game.id}`) Click to see more info
    if locals.authenticated
        if locals.user.id == specificCollection.userId
            a(href='/games') Add game
