extends layout
append head
    script(src="/javascripts/add-game.js" type="module")
block content
    each game in allGames 
        div(id=`${game.id}`).contentMain
            h1= game.name
            div.content1
                div.gameInfo
                    img(class="game-image" src= game.image alt="")
                p= game.description
                div.miscGameInfo
                    h4= game.publisher
                    h4= game.platform
                    a(href=`/games/${game.id}`) More info
            div.content2
                if locals.authenticated
                    select(class=`select-${game.id}`)
                        each collection in allCollections
                            option(value=collection.id)= collection.name                       
                    button.addGameBtn Add game

