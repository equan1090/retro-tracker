extends layout
block content
    table
        thead
            tr
                td Name
                td Description
                td Platform
                td Publisher
                td More Info
                td
        tbody
            each game in allGames
                tr
                    td= game.name
                    td= game.description
                    td= game.platform
                    td= game.publisher
                    td: a(href=`/games/${game.id}`) Click to see more info
                    if locals.authenticated
                        td
                            select
                                each collection in allCollections
                                    option(value=collection.id)= collection.name
                            button Add game
