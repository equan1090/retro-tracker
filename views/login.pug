extends layout.pug
block content
    h1= title
    if demoUser
        form(action='/users/login' method='post')
            input(type='hidden' name='_csrf' value=csrfToken)
            div.emailContainer
                label(for='email') Email
                input(type='email' name='email' value=demoUser.email required)
            div.passwordContainer
                label(for='password') Password
                input(type='password' name='password' value=demoUserPassword required)
            div.buttonContainer
                button(type='submit') Log in
                a(href='/') Cancel
        div
            a(href='/users/register') Don't have an account? Register here!

    else
        form(action='/users/login' method='post')
            input(type='hidden' name='_csrf' value=csrfToken)
            div.emailContainer
                label(for='email') Email
                input(type='email' name='email' required)
            div.passwordContainer
                label(for='password') Password
                input(type='password' name='password' required)
            div.buttonContainer
                button(type='submit') Log in
                a(href='/') Cancel
        div.button
            a(href='/users/register') Don't have an account? Register here!
